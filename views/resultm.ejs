<% include partials/header1.ejs %>

<div class="ui main text container">
<div class="ui ordered steps">
  <div class="completed step">
    <div class="content">
      <div class="title">Search</div>
      <div class="description">Search the movie</div>
    </div>
  </div>
  <div class="active step">
    <div class="content">
      <div class="title">Select</div>
      <div class="description">Select the movie</div>
    </div>
  </div>
  <div class="disabled step">
    <div class="content">
      <div class="title">Write</div>
      <div class="description">Write the review</div>
    </div>
  </div>
</div>
    <div class="ui huge header">Select the Movie</div>
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% for(var i=0;i<data["Search"].length;++i){ %>
            <% var item=data.Search[i]; %>
            <% var imdb=item.imdbID %>
                <div class="item">
                    <div class="image">
                        <img src="<%= item["Poster"]%>">
                    </div>
                    <div class="content">
                         <a class="header" href="#"><%=item.Title%></a>
                         <div class="meta">
                             <span><%= item.Year %></span>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/selectm/<%=imdb%>"> Write a Review</a>
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

